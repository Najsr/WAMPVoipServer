{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "realm1",
                    "roles": [
                        {
                            "name": "anonymous",
							"authorizer": "com.authorizon.auth",
                            "disclose": {
                                "caller": true,
                                "publisher": true
                            }
                        },
						{
							"name": "god",
							"permissions": [
								{
								    "uri": "*",
									"allow": {
										"call": true,
										"subscribe": true,
										"register": true,
										"publish": true
									},
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    }
								}
							]
						}
                    ]
                }
            ],	
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8080
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "ws": {
                            "type": "websocket",
							"auth": {
								"anonymous": {
									"type": "static",
									"role": "anonymous"
								},
								"ticket": {
									"type": "static",
									"principals": {
										"god": {
											"ticket": "bestpass",
											"role": "god"
										}
									}
								}
							}
                        }
                    }
                }
            ]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            }
           
        }
    ]
}
